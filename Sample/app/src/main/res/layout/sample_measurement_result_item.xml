<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/measurementItemACTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/sample_app_circle_shape_small_green"
        android:drawablePadding="5dp"
        android:textColor="@color/sample_app_black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="A1" />

    <View
        android:id="@+id/dv1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sample_app_grey"
        app:layout_constraintBottom_toTopOf="@+id/areaItemACTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/measurementItemACTV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/areaItemACTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/AREA"
        android:textColor="@color/sample_app_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dv1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/areaItemValueACTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:textColor="@color/sample_app_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dv1"
        tools:text="16.5 cm2" />

    <View
        android:id="@+id/dv2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/sample_app_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/areaItemACTV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/circumferenceItemACTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/CIRCUMFERENCE"
        android:textColor="@color/sample_app_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dv2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/circumferenceItemValueACTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:textColor="@color/sample_app_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dv2"
        tools:text="28.6 cm" />

    <View
        android:id="@+id/dv3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/sample_app_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circumferenceItemACTV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lengthItemACTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/LENGTH"
        android:textColor="@color/sample_app_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dv3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lengthItemValueACTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:textColor="@color/sample_app_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dv3"
        tools:text="4.2 cm" />

    <View
        android:id="@+id/dv4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/sample_app_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lengthItemACTV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/widthItemACTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/WIDTH"
        android:textColor="@color/sample_app_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dv4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/widthItemValueACTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:textColor="@color/sample_app_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dv4"
        tools:text="4.2 cm" />

    <View
        android:id="@+id/dv5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/sample_app_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/widthItemACTV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/depthItemACTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/DEPTH_MM"
        android:textColor="@color/sample_app_black"
        app:layout_constraintBottom_toTopOf="@+id/dv6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dv5" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/depthItemValueACET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:hint="@string/TAP_TO_ADD_DEPTH"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textColor="@color/sample_app_grey"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/depthItemACTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dv5" />

    <View
        android:id="@+id/dv6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:background="@color/sample_app_grey"
        app:layout_constraintBottom_toBottomOf="@+id/depthItemACTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/depthItemACTV" />

</androidx.constraintlayout.widget.ConstraintLayout>
