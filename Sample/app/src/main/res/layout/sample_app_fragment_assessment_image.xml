<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/hidePhotoACIV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageSSIV"
        app:layout_constraintEnd_toEndOf="@+id/imageSSIV"
        app:layout_constraintStart_toStartOf="@+id/imageSSIV"
        app:layout_constraintTop_toTopOf="@+id/imageSSIV"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:visibility="visible" />

    <com.example.woundsdk.utils.image.drawstroke.StrokeScalableImageView
        android:id="@+id/imageSSIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/videoPlayerContainerCl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WOUND_GENIUS_SDK_black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
